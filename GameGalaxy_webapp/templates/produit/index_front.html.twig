      <script>
    $(document).ready(function() {
        // Show products based on the selected category
        $('#categorySelect').change(function() {
            var categoryId = $(this).val();
            $('#productList .col-md-6').addClass('d-none');
            if (categoryId) {
                $('#productList .col-md-6[data-category-id="' + categoryId + '"]').removeClass('d-none');
            } else {
                $('#productList .col-md-6').removeClass('d-none');
            }
        });
    });
</script>
