	<!-- HEAD SECTION END -->

	<!-- HASSENE EVENEMENTS -->

	<section class="pt-120 pb-90">
		<div class="container">
			<div class="row">
				<div class="col-lg-4">
					<div class="section-header has--bg style--two">
						<div class="header-image style--two"><img src={{ asset(image_dir ~ 'elements/header-el-4.png') }} alt="image"></div>
						<span class="section-sub-title">Evenements recents</span>
						<h2 class="section-title">Evenements</h2>
					</div>
					<a href="/evenement/front" class="cmn-btn">Voir tous les évènements</a>
				</div>
				<div class="col-lg-8 mt-lg-0 mt-5">
					<div class="blog-slider">
						{% if evenements %}

							{% for i in 0..2 %}
								<div class="post-card">
									<div class="post-card__thumb">
										<img src={{ asset(uploads_dir ~ evenements[i].image) }} alt="image">
									</div>
									<div class="post-card__content">
										<span class="date">{{evenements[i].date ? evenements[i].date|date('l M Y H:i:s') : '' }}</span>
										<h3 class="post-title">
											<a href="/evenement/front/{{evenements[i].id}}">{{evenements[i].nom}}</a>
										</h3>

									</div>
								</div>
								<!-- post-card end -->
							{% endfor %}

							{% else %}

						{% endif %}
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- HASSENE EVENEMENTS END -->
	<section class="pt-120 pb-120 position-relative overflow-hidden">

		<div class="container">
			<div class="row justify-content-center">
				<div class="col-lg-5">
					<div class="section-header text-center has--bg">
						<div class="header-image"><img src="..\FRONT\assets\images\elements\header-el-5.png" alt="image"></div>
						<h2 class="section-title">Nos jeux</h2>
						<div class="tags-list">
							<a href="/cart">Votre Panier</a>

						</div>
						<p>Nous créons des jeux pour une variété de plates-formes et de consoles de jeu, y compris PC, Mac, Switch, Playstation 4, Xbox One et les nouvelles consoles à venir.</p>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-lg-12"></div>
			</div>
		</div>
	</div>
	<div class="row  mt-50 mb-none-40">
		{% for i in 0..1 %}
			<div class="col-md-6 mb-40">
				<div class="game-card">
					<div class="game-card__thumb">
						
					</div>
					<div class="game-card__content">
						<div class="game-card__details">
							<div class="game-card__info">
								<div class="thumb"><img src={{ asset(uploads_dir ~ produit[i].img) }} alt="photo">
								</div>
								<div class="content">
									<h3 class="game-card__title">
										<a href="{{ path('app_produit_detail', {'id': produit[i].id}) }}">
											<td>{{ produit[i].nomProduit }}</td>
										</a>
									</h3>
									<h3 class="game-card__title">
										<a href="{{ path('app_produit_detail', {'id': produit[i].id}) }}">
											<td>{{ produit[i].prix }}</td>
										</a>
									</h3>
									<p>{{ produit[i].description|slice(0, 15) ~ '...' }}
										<a href="{{ path('app_produit_detail', {'id': produit[i].id}) }}">Read More</a>
									</p>

								</div>
							</div>
							{{ generate_stars(produit[i].rating) }}</i>
					</div>
					<div class="game-card__action">
						<p class="mb-2">Download now at</p>
						<a href="{{ path('cart_add', {'id': produit[i].id}) }}">
							<button type="button" class="btn btn-outline-warning">Ajouter Panier</button>
						</a>

						<img src="{{qr_code_url(app.request.uri)}}/{{produit[i].id}}/detail" alt="photo" width="90" height="90"/>
					</div>
				</div>
				<!-- game-card__content end -->
			</div>
			<!-- game-card end -->
		</div>
	{% endfor %}
</section>

