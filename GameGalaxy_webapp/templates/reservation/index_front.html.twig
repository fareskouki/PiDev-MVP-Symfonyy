{% extends 'FRONT/base.html.twig' %}

{% block title %}
	Mes Réservations
{% endblock %}

{% block body %}
	<!-- inner-hero start -->
	<section class="inner-hero bg_img" data-background="../FRONT/assets/images/bg/inner-hero.jpg">


		<div class="container">
			<div class="row">
				<div class="col-lg-12">
					<h2 class="page-title">Réservations</h2>
					<ul class="page-list">
						<li>
							<a href="index.html">Acceuil</a>
						</li>
						<li>Mes Réservations</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- inner-hero end -->

	<div class="row">
		<div class="col-lg-12">
			<div class="faq-wrapper">
				<div class="section-header text-center">
					<span class="section-sub-title">Vous avez réservé pour un évènement?</span>
					<h2 class="section-title">Voici toutes vos réservations.</h2>
					<p>Vous y trouverez aussi vos QR-Codes exclusifs pour vos réservations.</p>
				</div>
				<!-- section header -->
				<div class="accordion cmn-accordion" id="faqAcc-one">

					

					{% if reservations %}
					{% set count = 0 %}
					{% for reservation in reservations %}
					{% set count = count + 1 %}
						<div class="card">
							<div class="card-header" id="h-5">
								<button class="btn btn-link btn-block text-left collapsed" type="button" data-toggle="collapse" data-target="#collapse{{count}}" aria-expanded="false" aria-controls="collapse{{count}}">

									{{ reservation.getIdEvenement() }}
								</button>
							</div>
							<div id="collapse{{count}}" class="collapse" aria-labelledby="h-{{count}}" data-parent="#faqAcc-one">
								<div class="card-body">
									<p>REF:
										{{ reservation.id }}</p>
									<p>Réservation faite le:
										{{ reservation.date ? reservation.date|date('Y-m-d H:i:s') : '' }}
									</p>
									<span class="section-sub-title">Faites scanner ce QR-Code à l'entrée!</span>
									<div class="row">
									<img src="{{qrcodes[count]}}" alt="qr-code"/>
									</div>
								</div>
							</div>
						</div>
						{% endfor %}
						{% else %}

						<div class="section-header text-center has--bg">
						<div class="header-image"><img src="/FRONT/assets/images/elements/header-el.png" alt="image"></div>
						<h2 class="section-title">Pas de réservations!</h2>
						<p>Réservez pour un évènement d'abord!</p>
					</div>

						{% endif %}
					</div>
					<div class="row justify-content-center mt-50">
				<div class="col-lg-10">
					
				</div>
			</div>

				{% endblock %}
