{% extends 'BACK/base.html.twig' %}
{% block title %}
	Détails du Compte
{% endblock %}
{% block body %}
	<div id="layoutSidenav_content">
		<main>
			<div class="card-body">
				<table class="table">
					<tbody>
						<tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Pseudo</th>
                <td>{{ user.Pseudo }}</td>
            </tr>
            <tr>
                <th>Addresse</th>
                <td>{{ user.addresse }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ user.dateNaissance ? user.dateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
					</tbody>
				</table>


				<div class="row mb-3">
					<div class="col-md-6">
						<a class="btn btn-success btn-block" href="{{ path('app_user_edit', {'id': user.id}) }}">Modifier</a>
					</div>
					<div class="col-md-6">
						{{ include('user/_delete_form.html.twig', {'class':'btn btn-danger btn-block'}) }}
					</div>
					<div class="col-md-6 my-3">
						<a class="btn btn-primary btn-block " href="{{ path('app_user_index') }}">Retour à la liste</a>
					</div>
                    <div class="col-md-6">
	                <a class="btn btn-danger btn-block" href="{{ path('disable_user',{'id': user.id})}}">Disable</a>
                    </div>
                    <div class="col-md-6">
	                <a class="btn btn-success btn-block" href="{{path('enable_user',{'id': user.id})}}">Enable</a>
                    </div>
				</div>
			    </div>
			
		</main>
	{% endblock %}
