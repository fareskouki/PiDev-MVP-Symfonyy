{% extends 'BACK/base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
<div  id="layoutSidenav_content">
    <section class="bg-light p-3">

    <table class="table">
        <thead>
        <tr> <h1>Order index</h1></tr>
        <tr>
                <th style="color: #8984dc">Id</th>
                <th style="color: #8984dc">Status</th>
                <th style="color: #8984dc">Total</th>
                <th style="color: #8984dc">actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td style="color: #8984dc">{{ order.id }}</td>
               {#  <td style="color: #8984dc">{{ order.status }}</td>#}
            <td >  {% if order.status == "Confirmed" %}
                     <div class="progress">
                    <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                </div>
            {%  elseif order.status == "Pending" %}
                <div class="progress">
                    <div class="progress-bar bg-warning" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>                        </div>
                </div>
                {% endif %}
            </td>
            </div>
                <td style="color: #8984dc">{{ order.total }}</td>
                <td style="color: #8984dc">
                    <a class="btn btn-info" style="color: #ffffff" href="{{ path('app_order_show_back', {'id': order.id}) }}">visualiser</a>
                    <a class="btn btn-danger" style="color: #ffffff" href="{{ path('app_order_edit', {'id': order.id}) }}">Annuler</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td style="color: #8984dc" colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </section>
</div>
{% endblock %}
