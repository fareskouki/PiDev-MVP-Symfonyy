{% set Title = 'Modifier Evenement' %}
{% extends 'BACK/base.html.twig' %}

{% block title %}
	Modifier l'évènement
{% endblock %}

{% block body %}
	
						<div class="container">
							<div class="row justify-content-center">
								<div class="col-lg-7">
									<div class="card shadow-lg border-0 rounded-lg mt-5">
										<div class="card-header">
											<h3 class="text-center font-weight-light my-4">Modifier l'évènement</h3>
										</div>
										<div class="card-body">
											{{form_start(form,{'attr':{'novalidate':'novalidate'}})}}
											<div class="row mb-3">
												<div class="col-md-6">
													<div class="form-floating mb-3 mb-md-0">
														{{form_widget(form.nom,{'attr':{'class':'form-control'}})}}
														<label for="inputFirstsName">Nom</label>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-floating">
														{{form_widget(form.date,{'attr':{'class':'form-control datetimepicker'}})}}
														<label for="inputLastName">Date et Heure</label>
													</div>
												</div>
											</div>
											<div class="form-floating mb-3">
												{{form_widget(form.description,{'attr':{'class':'form-control'}})}}
												<label for="inputEmail">Description</label>
											</div>
											<div class="row mb-3">
												<div class="col-md-6">
													<div class="form-floating mb-3 mb-md-0">
														{{form_widget(form.duree,{'attr':{'class':'form-control'}})}}
														<label for="inputFirstName">Duree</label>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-floating">
														{{form_widget(form.capacite,{'attr':{'class':'form-control'}})}}
														<label for="inputLastName">Capacité</label>
													</div>
												</div>
											</div>

											<div class="row mb-3">
												<div class="col-md-6">
													<div class="form-floating mb-3 mb-md-0">
														{{form_widget(form.type,{'attr':{'class':'form-control'}})}}
														<label for="inputFirstName">Type</label>
													</div>
												</div>
												<div class="col-md-6">
													<div class="form-floating mb-3 mb-md-0">
														{{form_widget(form.image,{'attr':{'class':'form-control'}})}}
														<label for="inputFirstsssName">Image</label>
													</div>
												</div>
											</div>
											<div class="mt-4 mb-0">
												<div class="d-grid">
													{{ include('evenement/_form.html.twig', {'button_label': 'Modifier'}) }}
												</div>
											</div>
											<div class="mt-4 mb-0">
												<div class="d-grid">
													{{ include('evenement/_delete_form.html.twig') }}
												</div>
											</div>


											{{form_end(form)}}
										</div>
										<div class="card-footer text-center py-3">
											<div class="small">
												<a href="{{ path('app_evenement_index') }}">Retour à la liste</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					
		{% endblock %}