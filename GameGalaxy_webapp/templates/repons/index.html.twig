{% extends 'BACK/base.html.twig' %}
{% block body %}
<div  id="layoutSidenav_content">

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Date Repnse</th>
                <th>Contenu Reponse</th>
                <th>Status Reponse</th>
                <th>Reclamant</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for repon in repons %}
            <tr>
                <td>{{ repon.id }}</td>
                <td>{{ repon.dateRep ? repon.dateRep|date('Y-m-d') : '' }}</td>
                <td>{{ repon.contenuRep }}</td>
                 <td>
                {% if repon.statusRep == 1 %}
                    <div class="progress">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 25%" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    
                      {%  elseif repon.statusRep == 2 %}
                    <div class="progress">
                        <div class="progress-bar bg-info" role="progressbar" style="width: 50%" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>                        </div>
                    </div>
                    
                      {% elseif repon.statusRep == 3 %}
                    <div class="progress">
                        <div class="progress-bar bg-danger" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    {% endif %} </td>
                <td>{{ repon.statusRep }}</td>
                <td>{{ repon.getIdReclamation()}}</td>
                <td>
                    <a type="button" class="btn btn-warning" href="{{ path('app_repons_show', {'id': repon.id}) }}">show</a>
                    <a type="button" class="btn btn-info" href="{{ path('app_repons_edit', {'id': repon.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

  {# <centre><a role="button" class="btn btn-primary" href="{{ path('app_repons_new') }}">Create new</a></centre> #}
{% endblock %}
