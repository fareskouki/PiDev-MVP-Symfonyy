
{% extends 'BACK/base.html.twig' %}

{% block title %}
	Détails de la Reponse
{% endblock %}

{% block body %}
	<div id="layoutSidenav_content">
		<main>
			<div class="card-body">
				<table class="table">
					<tbody>
						<tr>
							<th>Id</th>
							<td>{{ repon.id }}</td>
						</tr>
							<th>Date</th>
							<td>{{ repon.dateRep ? repon.dateRep|date('Y-m-d') : '' }}</td>
						</tr>
						
						<tr>
							<th>Conetnu</th>
							<td>{{ repon.contenuRep }}</td>
						</tr>
						<tr>
							<th>Status</th>
							<td>{{ repon.statusRep }}</td>
						</tr>
					</tbody>
				</table>


				<div class="row mb-3">
					<div class="col-md-6">
						<a class="btn btn-primary btn-block" href="{{ path('app_repons_edit', {'id': repon.id}) }}">Modifier</a>
					</div>
					<div class="col-md-6">
						{{ include('repons/_delete_form.html.twig', {'class':'btn btn-primary btn-block'}) }}
					</div>
					<div class="col-md-6">
						<a href="{{ path('app_repons_index') }}">Retour à la liste</a>
					</div>
				</div>
			</div>
		</main>
	{% endblock %}