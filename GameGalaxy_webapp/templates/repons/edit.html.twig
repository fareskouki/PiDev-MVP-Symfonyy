												</div>
											</div>
											<div class="mt-4 mb-0">
												<div class="d-grid">
													{{ include('repons/_delete_form.html.twig') }}
												</div>
											</div>


											{{form_end(form)}}
										</div>
										<div class="card-footer text-center py-3">
											<div class="small">
												<a type="button" class="btn btn-primary" href="{{ path('app_repons_index') }}">Retour Ã  la liste</a>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</main>
				</div>
			</main>
		{% endblock %}